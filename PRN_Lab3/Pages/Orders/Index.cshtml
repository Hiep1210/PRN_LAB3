@page
@model PRN_Lab3.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th colspan="8">
                <form method="post" asp-page-handler="filter" id="filterform">
                    <select name="ShipCity" onchange="this.form.submit()">
                        <option selected="true" disabled="disabled">Choose Tagging</option>
                        @foreach (string c in Model.Cities)
                        {
                            <option value="@c">@c</option>
                        }
                    </select>
                </form>
            </th>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].ShippedDate)
            </th>
            <th>
                Date of Arrival
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].ShipName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].ShipAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order[0].ShipCity)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Order)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequiredDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipCity)
                </td>
                <td>
                    <a asp-page="../Products/ViewCart">Products</a> |
                    <a asp-page="./Delete" asp-route-id="@item.OrderId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    <form method="post" asp-page-handler="filter">
        <input type="hidden" value="@Model.ShipCity" name="ShipCity" />
        @for (int i = 1; i <= Model.TotalPage; i++)
        {
            @if (i == Model.PageIndex)
            {
                <button value="@i" style="background-color:aqua; font-weight:bold" name="PageIndex" type="submit">@i</button>
            }
            else
            {
                <button value="@i" name="PageIndex" type="submit">@i</button>
            }
        }
    </form>
</div>